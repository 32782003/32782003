#include <stdio.h>
#include <stdlib.h>
int main()
{
    char op;
    int a,b;
    float c;
    printf("please enter an operator: ");
    scanf("%s",&op);
     printf("please enter a number: ");
    scanf("%d",&a);
     printf("please enter a number: ");
    scanf("%d",&b);
    switch(op)
    {
        case '+':
        c=a+b;
        printf("%d+%d=%f",a,b,c);break;
         case '-':
        c=a-b;
        printf("%d-%d=%f",a,b,c);break;
        
         case '*':
        c=a*b;
        printf("%d*%d=%f",a,b,c);break;
         case '/':
        c=a/b;
        printf("%d/%d=%f",a,b,c);break;
        
        
        
        
    }
    }
